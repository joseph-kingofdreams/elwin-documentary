---
export interface Props {
    name: string;
    img?: string;
}

const { name, img } = Astro.props;
---

<div
    class="flex flex-col gap-2 flex-1 md:w-auto w-[calc(50vw-80px)] max-sm:w-[calc(100vw-48px)] snap-start scroll-mx-16 max-sm:scroll-mx-6"
>
    <div class="bg-orange-500 aspect-[27/40] rounded-md overflow-hidden">
        <img src={img} alt="" />
    </div>
    <p class="text-white text-semibold">{name}</p>
</div>
