---
import { twMerge } from "tailwind-merge";
import Icons from "/icons.svg";

export interface Props {
    id?: string;
    name: string;
    onClick?: string;
    size?: string;
    style?: string;
}
const { name, onClick, size, style } = Astro.props;
---

<svg
    class={twMerge(
        "fill-primary origin-center " +
            (onClick ? "cursor-pointer " : "") +
            style
    )}
    height={size}
    width={size}
    onclick={onClick}
    preserveAspectRatio="xMidYMid meet"
    viewBox="0 0 48 48"
>
    <use class="pointer-events-none" href={`${Icons}#${name}`}></use>
</svg>
