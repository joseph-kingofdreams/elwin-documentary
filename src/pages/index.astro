                            <Character name={"Abraham Lincoln"} />
                            <Character name={"Josiah Henson"} />
                            <Character name={"John Brown"} />
                            <Character name={"Salmon Portland Chase"} />
                        </div>
                        <div
                            class="flex lg:gap-8 gap-4 flex-1 md:peer-[.flex]/character:hidden"
                        >
                            <Character name={"Vestal Coffin"} />
                            <Character name={"William H. Seward"} />
                            <Character name={"Adam Lowry Rankin"} />
                            <Character name={"Harriet Beecher Stowe"} />
                            <Character name={"Peter Still"} />
                        </div>
                    </More>
                </div>
            </div>
            <div class="flex flex-col lg:gap-8 gap-4">
                <h1 class="text-white font-display">Film Locations</h1>
